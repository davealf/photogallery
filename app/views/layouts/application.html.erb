<!DOCTYPE html>
<html>
  <head>
    <title>Photogallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Shine</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
        <%= link_to "Home", root_path, class: 'nav-link' %>
        </li>
    
          <% @categoryNav.each do |category| %>
          <li class ="nav-item"><%= link_to category.name, category_path(category.id),  class: 'nav-link'%></li>
          <% end %>
          </ul>

          <ul class="nav navbar-nav pull-right">
          <li class = "nav-item"><%= link_to "Upload Photo", upload_path, class:'nav-link' %></li>
          <li class = "nav-item"><%= link_to "Add Category", new_category_path, class:'nav-link'%></li>
         
         
          <li class = "nav-item"><%= link_to "Sign Out",destroy_user_session_path, method: :delete, class:'nav-link'%></li>
           </div> 
           </ul>
     <%else%>
       <li class = "nav-item"><%= link_to "Register", new_user_registration_path, class:'nav-link' %></li>
       <li class = "nav-item"><%= link_to "Sign In", new_user_session_path, class:'nav-link' %></li>
      <%end%> 
</nav>

<section>
<div class="container">
   <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
        <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
 <%= yield %>

</div>
</div>
</section>
  <footer>
    <p>Copyright @Alpha&Omega</p>
  </footer>
  </body>
</html>
